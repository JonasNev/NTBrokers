@model RealEstateModel
<link href="D:\Programavimas\NTBrokers\NTBrokers\Content\Chosen\chosen.min.css" rel="stylesheet" />
<h2>Add a company</h2>

@using (Html.BeginForm("Create", "Company", FormMethod.Post))
{
    <div class="form-group">
        @Html.LabelFor(c => c.Companies[0].Name, "Name")
        @Html.TextBoxFor(c => c.Companies[0].Name, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(c => c.Companies[0].City, "City")
        @Html.TextBoxFor(c => c.Companies[0].City, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(c => c.Companies[0].Street, "Street")
        @Html.TextBoxFor(c => c.Companies[0].Street, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(c => c.Companies[0].Number, "No.")
        @Html.TextBoxFor(c => c.Companies[0].Number, new { @class = "form-control" })
    </div>
    <div class="form-group">
        <label asp-for="Brokers[0].Id" class="control-label">Brokers</label>
        <div>
            @*MultiSelect Dropdown*@
            @Html.ListBoxFor(model => model.BrokerIds, new MultiSelectList(Model.Brokers, "Id", "Name"), new { id = "multiSelectDropDown", multiple = "multiple" })
        </div>
    </div>
    @Html.HiddenFor(c => c.Companies[0].Id)
    <button type="submit" class="btn btn-primary">Add</button>
    @Html.ActionLink("Cancel", "Index", "Company", null, new { @class = "btn btn-secondary" })
}

@section Scripts
{
    <script>
        $(function () {
            $("multiSelectDropDown").chosen();
        });
    </script>
}


<script src="~/js/chosen.jquery.min.js"></script>